<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

	<TextView
	    android:id="@+id/tv_version"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/imageButton1"
	    android:layout_alignParentTop="true"
	    android:layout_alignRight="@+id/imageButton1"
	    android:text="رقم الإصـــدار"
	    android:gravity="right"
	    android:layout_marginTop="10dp"
	    android:textColor="#000000" />

	<TextView
	    android:id="@+id/tv_date"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/tv_version"
	    android:layout_alignRight="@+id/imageButton1"
	    android:layout_below="@id/tv_version"
	    android:text="تاريخ الإصدار"
	    android:layout_marginTop="5dp"
	    android:gravity="right"
	    android:textColor="#000000" />

    <ImageView
        android:id="@+id/imageButton1"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_below="@id/tv_date"
        android:layout_centerHorizontal="true"
       
        android:src="@drawable/about_app" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/len"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageButton1"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <ImageButton
             android:id="@+id/btn_Mail_site"
            android:layout_width="43dp"
            android:layout_height="44dp"
            android:background="@null"
            android:src="@drawable/mail" />

        <ImageButton
             android:id="@+id/btn_Site_site"
            android:layout_width="43dp"
            android:layout_height="44dp"
            android:background="@null"
            android:src="@drawable/site" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" 
        android:layout_below="@+id/textView1"
        android:layout_marginTop="15dp"
        android:src="@drawable/etqan_site_image" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageButton1"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|right"
        android:text="@string/str_about_app_send_site"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/len"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|right"
        android:text="@string/str_about_app"
        android:layout_marginTop="10dp"
        android:textColor="#000000" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

       
        <ImageButton
            android:id="@+id/btn_Mail"
            android:layout_width="43dp"
            android:layout_height="44dp"
            android:background="@null"
            android:src="@drawable/mail" />

        <ImageButton
            android:id="@+id/btn_Site"
            android:layout_width="43dp"
            android:layout_height="44dp"
            android:background="@null"
            android:src="@drawable/site" />
          <ImageButton
            android:id="@+id/btn_Facebook"
            android:layout_width="43dp"
            android:layout_height="44dp"
            android:background="@null"
            android:src="@drawable/about_app_face" />

        <ImageButton
            android:id="@+id/btn_Twitter"
            android:layout_width="43dp"
            android:layout_height="44dp"
            android:background="@null"
            android:src="@drawable/about_app_twitter" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/len"
        android:layout_alignTop="@+id/tv_version"
        android:layout_marginRight="46dp"
        android:textColor="#000000"
        android:text="١٫٧"
         />
    
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/len"
        android:layout_alignTop="@+id/tv_date"
        android:layout_marginRight="46dp"
        android:textColor="#000000"
        android:text="١-١-٢٠١٣"
         />

</RelativeLayout>
</ScrollView>