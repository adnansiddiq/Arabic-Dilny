<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
        android:id="@+id/reg_scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:background="#ffffff"
        android:padding="10dp"
          >
        <RelativeLayout
            android:id="@+id/reg_linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            
            <TextView
	        android:id="@+id/reg_head"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true" 
	        android:gravity="center"
	        android:textColor="#000000"
	        android:text="تسجيل مستخدم جديد"
	        android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/reg_textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/reg_head"
                android:layout_marginRight="28dp"
                android:layout_marginTop="28dp"
                android:textColor="#000000"
                android:text="اسم المستخدم : "
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceMedium" />
             <EditText
                android:id="@+id/reg_edi_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/reg_textView1"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:inputType="textPersonName"
                android:hint="محمد أحمد" >
                <requestFocus />
                </EditText>
             <TextView
                android:id="@+id/reg_textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/reg_edi_name"
                android:layout_marginRight="28dp"
                android:layout_marginTop="5dp"
                android:text="البريد الإلكتروني : "
                android:textColor="#000000"
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            
            <EditText
                android:id="@+id/reg_edi_mail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/reg_textView2"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:hint="name@example.com"
                android:inputType="textEmailAddress"
                 />
             <TextView
                android:id="@+id/reg_textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/reg_edi_mail"
                android:layout_marginRight="28dp"
                android:layout_marginTop="5dp"
                android:text="كلمة المرور : "
                android:gravity="right"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            
            <EditText
                android:id="@+id/reg_edit_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/reg_textView3"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:password="true"
                android:gravity="right"
                android:inputType="textPassword"
                
                 />

        </RelativeLayout>
</ScrollView>

 