<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/notif_pb"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:gravity="right" 
        android:src="@drawable/ic_launcher"/>

    <TextView
        android:id="@+id/notif_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/notif_pb"
        android:layout_alignTop="@+id/notif_pb"
        android:layout_toLeftOf="@+id/notif_pb"
        android:gravity="right"
         android:textColor="#FFFFFF"
         android:textStyle="bold"
        android:layout_marginRight="8dp"
        android:text="@string/str_msg_click_to_open_liting" />

</RelativeLayout>