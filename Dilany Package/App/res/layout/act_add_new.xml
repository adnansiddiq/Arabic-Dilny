<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="20dip">
          >
        <RelativeLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            >
          <TextView
                android:id="@+id/new_Listing_textView0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="28dp" 
                android:layout_marginTop="28dp"
                android:text="اسم المكان : " 
                android:textAppearance="?android:attr/textAppearanceMedium" />
             <EditText 
                android:id="@+id/new_Listing_edit_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/new_Listing_textView0"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp" 
                 android:selectAllOnFocus="true"
                android:hint="مطعم الخبر" >
              
            </EditText>
            <TextView
                android:id="@+id/new_Listing_textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/new_Listing_edit_title"
                android:layout_alignParentRight="true"
                android:layout_marginRight="28dp"
                android:layout_marginTop="28dp"
                android:text="وصف المكان : "
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceMedium" />
             <EditText
                android:id="@+id/new_Listing_edit_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/new_Listing_textView1"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                 android:selectAllOnFocus="true"
                 android:imeOptions="actionGo"
                 android:imeActionId="1"
                android:hint="مكان جميل " > 
            </EditText>

            <TextView
                android:id="@+id/new_Listing_textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/new_Listing_edit_desc"
                android:layout_marginRight="28dp"
                android:layout_marginTop="5dp"
                android:text="كلمات مفتاحية : "
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            
            <EditText
                android:id="@+id/new_Listing_edit_tags"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/new_Listing_textView2"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp" 
                 android:selectAllOnFocus="true"
                android:hint="مطعم ، لبناني"
                />
            <Button
                     android:id="@+id/new_btn_open_map"
                     style="?android:attr/buttonStyleSmall"
                     android:layout_width="110dp"
                     android:layout_height="60dp"
                     android:layout_below="@+id/new_Listing_edit_tags"
                     android:layout_toLeftOf="@+id/new_Listing_textView8"
                     android:drawableLeft="@drawable/ic_map"
                     android:layout_marginRight="10dp"
                     android:text="المكان عالخريطة" />
            <Button
                     android:id="@+id/new_btn_current_cord"
                     style="?android:attr/buttonStyleSmall"
                     android:layout_width="100dp"
                     android:layout_height="60dp"
                     android:layout_alignLeft="@+id/new_Listing_textView1"
                     android:layout_below="@+id/new_Listing_edit_tags"
                     android:drawableLeft="@drawable/ic_location"
                     android:layout_marginLeft="10dp"
                     android:text="الموقع الحالي" />

               <TextView
                   android:id="@+id/new_Listing_textView14"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_below="@+id/new_btn_current_cord"
                   android:layout_marginRight="28dp"
                   android:layout_marginTop="5dp"
                   android:gravity="right"
                   android:text="العنوان : "
                   android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <EditText
                android:id="@+id/new_Listing_edit_adress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/new_Listing_textView14"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp" 
                android:hint="العنوان" 
                android:focusable="false"
                android:longClickable="false"
                android:focusableInTouchMode="false"
                android:editable="false"
                android:clickable="false"
                 android:selectAllOnFocus="true"
                />
             <TextView
                android:id="@+id/new_Listing_textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/new_Listing_edit_adress"
                android:layout_marginRight="28dp"
                android:layout_marginTop="5dp"
                android:text="الأقسام : "
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <Spinner
                android:id="@+id/new_Listing_spinner_levels" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/new_Listing_textView15"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp" 
                android:focusable="true"
                />  
                
            <TextView
                android:id="@+id/new_Listing_textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/new_Listing_spinner_levels"
                android:layout_marginRight="28dp"
                android:layout_marginTop="5dp"
                android:text="التصنيفات : "
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <Spinner
                android:id="@+id/new_Listing_spinner_cats" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/new_Listing_textView8"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp" 
                android:text="1,2"
                android:hint="1,2"
                android:focusable="true"
                /> 
                <TextView
                android:id="@+id/new_Listing_textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/new_Listing_spinner_cats"
                android:layout_marginRight="28dp"
                android:layout_marginTop="5dp"
                android:text="التكلفة العليا : "
                android:gravity="right"
                android:visibility="gone"
                android:textAppearance="?android:attr/textAppearanceMedium" />
                 <EditText
                android:id="@+id/new_Listing_edit_price_max"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/new_Listing_textView9"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp" 
                android:text="200"
                android:hint="200"
                android:visibility="gone"
                 android:selectAllOnFocus="true"
                android:inputType="number"
                /> 
                <TextView
                android:id="@+id/new_Listing_textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/new_Listing_edit_price_max"
                android:layout_marginRight="28dp"
                android:layout_marginTop="5dp"
                android:text="التكلفة الدنيا : "
                android:gravity="right"
                android:visibility="gone"
                android:textAppearance="?android:attr/textAppearanceMedium" />
                 <EditText
                android:id="@+id/new_Listing_edit_price_min"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/new_Listing_textView10"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp" 
                android:text="50"
                android:hint="50"
                 android:selectAllOnFocus="true"
                android:inputType="number"
                android:visibility="gone"
                /> 
                 <TextView
                android:id="@+id/new_Listing_textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/new_Listing_edit_price_min"
                android:layout_marginRight="28dp"
                android:layout_marginTop="5dp"
                android:text="رقم الهاتف : "
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceMedium" />
                 <EditText
                android:id="@+id/new_Listing_edit_phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/new_Listing_textView11"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp" 
                android:hint="00966XXXXXXXX"
                android:inputType="number"
                 android:selectAllOnFocus="true"
                /> 
                <TextView
                android:id="@+id/new_Listing_textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/new_Listing_edit_phone"
                android:layout_marginRight="28dp"
                android:layout_marginTop="5dp"
                android:text="إضافة صورة"
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceMedium" />
                 <Button
                android:id="@+id/new_Listing_btn_image_From_Galary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/new_Listing_textView12"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp" 
                android:text="معرض الصور" 
                /> 
                 <Button
                android:id="@+id/new_Listing_btn_image_From_Camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_below="@id/new_Listing_textView12"
                android:layout_toLeftOf="@id/new_Listing_btn_image_From_Galary"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp" 
                android:text="الكاميرا" 
                /> 
                <ImageView
                android:id="@+id/new_Listing_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/new_Listing_btn_image_From_Galary" 
                android:layout_marginTop="5dp"  />

                 <!--  android:layout_alignTop="@+id/new_Listing_textView3" -->
                  <!--    android:layout_alignBottom="@+id/new_Listing_textView3" --> 
                
                <EditText
                    android:id="@+id/new_Listing_edit_lat" 
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                 <EditText
                    android:id="@+id/new_Listing_edit_lng"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                 

                 
                
        </RelativeLayout>
</ScrollView>